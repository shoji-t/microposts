<div class="row">
  <aside class="col-md-4">
    <%= render "user_info" %>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %> (<%= @microposts.count %>)</h3>
    <% if @microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>